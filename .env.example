# Application Configuration
PORT=8080
ENVIRONMENT=production
LOG_LEVEL=info
CONFIG_PATH=/app/configs
CONFIG_FILE=config.minimal.yaml

# Database Configuration
DB_PATH=/app/data/minimal.db
DATABASE_ENABLED=true

# Authentication Configuration
AUTH_ENABLED=false
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_DOMAIN=your_clerk_domain

# Turso Database Configuration
TURSO_ENABLED=false
TURSO_URL=your_turso_url
TURSO_AUTH_TOKEN=your_turso_auth_token
TURSO_SYNC_ENABLED=false
TURSO_SYNC_INTERVAL_SECONDS=300

# External API Keys
MEXC_API_KEY=your_mexc_api_key
MEXC_SECRET_KEY=your_mexc_secret_key
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://piquant-desire-production.up.railway.app/api
NEXT_PUBLIC_WS_URL=wss://piquant-desire-production.up.railway.app/ws
