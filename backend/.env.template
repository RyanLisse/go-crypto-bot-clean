# MEXC Configuration
MEXC_API_KEY=your_api_key_here
MEXC_SECRET_KEY=your_secret_key_here
MEXC_BASE_URL=https://api.mexc.com/api/v3
MEXC_WEBSOCKET_URL=wss://wbs.mexc.com/ws

# TursoDB Configuration
TURSO_ENABLED=true
TURSO_URL=your_turso_url_here
TURSO_AUTH_TOKEN=your_turso_auth_token_here
TURSO_SYNC_ENABLED=true
TURSO_SYNC_INTERVAL_SECONDS=300

# AI Provider Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
NOMIC_API_KEY=your_nomic_api_key_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
ENABLE_CORS=true
ALLOWED_ORIGINS=https://your-frontend-domain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Server Configuration
PORT=8080
ENV=production
LOG_LEVEL=info
